<%- include('../Includes/header.ejs')-%>
<link rel="stylesheet" href="/CSS/additem.css">
</head>
<body>
    <%- include('../Includes/navbar.ejs') -%>
    <main>
        

        <div class="container">
            <div class="form-container">
                <h2 class="text-center">Edit Your Item details</h2>
                <form action="/editDetails" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<%= data._id %>">
                    <div class="form-group">
                        <label for="itemName">Item Name</label>
                        <input type="text" class="form-control" name="itemName" placeholder="Enter item name" value="<%=data.item_Name%>">
                    </div>
                    <div class="form-group">
                        <label for="itemCategory">Item Category</label>
                        <select class="form-control" name="itemCategory" value="<%=data.item_Category%>">
                            <option>Category A</option>
                            <option>Category B</option>
                            <option>Category C</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="itemPrice">Item Price</label>
                        <input type="number" class="form-control" name="itemPrice" placeholder="Enter item price" value="<%=data.item_Price%>">
                    </div><br>
                    <div class="form-group">
                        <label for="itemImage1">Item Image 1</label>
                        <img src="/AdminImages/<%=data.item_FirstImage%>" alt="First Image">
                        <input type="file" class="form-control-file" name="itemImage1">
                    </div><br>
                    <div class="form-group">
                        <label for="itemImage2">Item Image 2</label>
                        <img src="/AdminImages/<%=data.item_SecondImage%>" alt="Second Image">
                        <input type="file" class="form-control-file" name="itemImage2">
                    </div>
                    <div class="form-group">
                        <label for="itemDescription">Item Description</label>
                        <textarea class="form-control" name="itemDescription" rows="3" placeholder="Enter item description" >
                        "<%=data.item_Description%>"
                        </textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Edit Item</button>
                </form>
            </div>
        </div>
    
    </main>
<%- include('../Includes/footer.ejs')-%>